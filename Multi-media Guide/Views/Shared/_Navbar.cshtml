@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <title>Admin</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Poppins:300,400,500,600,700,800,900" rel="stylesheet">
    <link href="~/Content/Admin/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/Content/Admin/css/style.css">

</head>
<body>

    <div class="wrapper d-flex align-items-stretch">
        <nav id="sidebar">
            <div class="p-4 pt-5">
                <a href="#" class="img logo rounded-circle mb-5" style="background-image: url('../../Content/Admin/images/logo.png'); "></a>
                <ul class="list-unstyled components mb-5">
                    <li>
                        <a href="@Url.Action("Index","Admin")">Home</a>

                    </li>

                    <li>
                        <a href="@Url.Action("Scene","Admin")">Video</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","User")">User List</a>
                    </li>
                    <li>
                        <a href="@Url.Action("Message","Admin")">Message</a>
                    </li>
                    <li>
                        <a href="@Url.Action("ChangePass","Admin")">Change Password</a>
                    </li>

                </ul>
                <div class="footer">
                    <p>
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        Copyright &copy;
                        All rights reserved | Multi Media Guide <i class="icon-heart" aria-hidden="true"></i>
                        <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                    </p>
                </div>
            </div>
        </nav>
        <!-- Page Content  -->
        <div id="content" class="p-4 p-md-5">
            <nav class="navbar navbar-expand-lg navbar-light bg-light">
                <div class="container-fluid">
                    <button type="button" id="sidebarCollapse" class="btn btn-primary">
                        <i class="fa fa-bars"></i>Menu
                        <span class="sr-only">Toggle Menu</span>
                    </button>
                    <button class="btn btn-dark d-inline-block d-lg-none ml-auto" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <i class="fa fa-bars"></i>Menu
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="nav navbar-nav ml-auto">
                            <li class="nav-item active">
                                <a class="nav-link" href="@Url.Action("Index","Admin")">Home</a>
                            </li>

                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Scene", "Admin")">Video</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Index","User")">User List</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="@Url.Action("Message","Admin")">Message</a>
                            </li>
                            <li>
                                <a class="nav-link" href="@Url.Action("Logout","Admin")">Logout</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </nav>
            @RenderBody()
        </div>
    </div>

    <script src="~/Content/Admin/js/popper.js"></script>
    <script src="~/Content/Admin/js/bootstrap.min.js"></script>
    <script src="~/Content/Admin/js/main.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
